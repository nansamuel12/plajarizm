{{ form_start(form,{'attr': {'role':'form'}}) }}

<div class="row">

	<div class="form-group col-4">
		<label class="control-label no-padding-right">{{ form_label(form.title) }}</label>
		{{ form_widget(form.title,{'attr':{'class':'form-control'}}) }}
		<div class="help-block with-errors"></div>
	</div>

	<div class="form-group col-6 ">
		<label class="control-label no-padding-right">{{ form_label(form.description) }}</label>
		{{ form_widget(form.description,{'attr':{'class':'form-control'}}) }}
		<div class="help-block with-errors"></div>
	</div>
	
	<div class="form-group col-6 ">
		<label class="control-label no-padding-right">{{ form_label(form.ownerGroup) }}</label>
		{{ form_widget(form.ownerGroup,{'attr':{'class':'form-control select2'}}) }}
		<div class="help-block with-errors"></div>
	</div>
	<div class="form-group col-6 ">
		<label class="control-label no-padding-right">{{ form_label(form.document) }} (docx)</label>
		{{ form_widget(form.document,{'attr':{'class':'form-control'}}) }}
		<div class="help-block with-errors"></div>
	</div>
	
</div>


{% if not button_label is defined  %}
	<button class="btn btn-info float-right">{{ button_label|default('Save') }}</button>
	<button class="btn  btn-warning float-right " style="margin-right:20px;" type="reset">Reset</button>

{% else %}

	<a href="{{ path('project_index') }}" class="btn btn-primary float-right">
		Cancel
	</a>

	<button class="btn btn-success mr-2 float-right">{{ button_label|default('Save') }}</button>
{% endif %}



{{ form_end(form) }}
